<Window x:Class="SecurityNotepad.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="entryWindow"
        Height="350" Width="500"
        Background="{x:Null}"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Canvas Background="#FF1C1C21" Margin="0,10,0,0">
        <Line X1="180" Y1="150" X2="320" Y2="150" Stroke="Gray" StrokeThickness="1"/>
        <Line X1="180" Y1="180" X2="320" Y2="180" Stroke="Gray" StrokeThickness="1"/>

        <!--изоюражение человечка в графе login-->
        <Line X1="180.7" Y1="141.9" X2="180.7" Y2="145.3" Stroke="White" StrokeThickness="1" Height="146" Width="182" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Line X1="191.3" Y1="141.9" X2="191.3" Y2="145.3" Stroke="White" StrokeThickness="1" Height="146" Width="192" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Line X1="180.7" Y1="145" X2="191.3" Y2="145" Stroke="white" StrokeThickness="1" Height="145" Width="193" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Line.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.17"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Line.RenderTransform>
        </Line>
        <Ellipse Width="8" Height="9" Stroke="White" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="182" Canvas.Top="130"/>
        <Path Stroke="White" StrokeThickness="1" HorizontalAlignment="Center" Stretch="Fill" VerticalAlignment="Center" Width="11.5" Canvas.Left="180.25" Canvas.Top="140.104" Height="2.3">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="50,150">
                        <ArcSegment Point="150,150" Size="100,100" SweepDirection="Clockwise"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <!--изобраение замочка в грайе password-->
        <Rectangle Width="11" Height="9" Stroke="White" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="180" Canvas.Top="165"/>
        <Path Stroke="White" StrokeThickness="1" HorizontalAlignment="Center" Stretch="Fill" VerticalAlignment="Center" Width="8" Canvas.Left="181.541" Canvas.Top="158.989" Height="6">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="50,150">
                        <ArcSegment Point="300,150" Size="100,100" SweepDirection="Clockwise"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Ellipse Width="3" Height="3" Stroke="White" StrokeThickness="0.5" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="184" Canvas.Top="167"/>
        <Line X1="191.5" Y1="141.9" X2="191.5" Y2="145.3" Stroke="White" StrokeThickness="1" Height="144" Width="192" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="-6" Canvas.Top="28"/>

        <!--интерфейс окна входа-->
        <Button x:Name="LogIn" Content="Log in" Foreground="White" Width="140" Height="19" Background="#FF111115" BorderThickness="0" HorizontalAlignment="Center" Canvas.Left="180" Canvas.Top="211" Click="Button_LogIn" VerticalAlignment="Top">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <TextBlock x:Name="LogInError" Canvas.Left="180" TextAlignment="Center" TextWrapping="Wrap" IsHitTestVisible="False" Foreground="DarkRed" Text="" Canvas.Top="180" Width="140" HorizontalAlignment="Center" VerticalAlignment="Top" Height="14" Background="{x:Null}" FontSize="10"  Visibility="Collapsed"/>

        <Grid Canvas.Left="195" Canvas.Top="129" Width="125">
            <TextBox x:Name="Login" 
             TextChanged="TextBox_LoginChanged"
             Foreground="White"
             Background="{x:Null}" BorderThickness="0"/>
            <TextBlock x:Name="LoginPlaceholder" 
               Text="Login" 
               Foreground="Gray" 
               Margin="3,2,0,0"
               IsHitTestVisible="False"/>
        </Grid>

        <TextBlock Canvas.Left="200" TextWrapping="Wrap" Text="First time here?" IsHitTestVisible="False" Foreground="White" Canvas.Top="235" HorizontalAlignment="Left" VerticalAlignment="Center" Width="62" FontSize="9"/>

        <Button  x:Name="SignUp" Content="Sign up" Foreground="Blue" Canvas.Left="262" Canvas.Top="233" HorizontalAlignment="Center" VerticalAlignment="Center" Height="15" FontSize="10" Width="42" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Click="Button_SignUp"/>

        <PasswordBox x:Name="PasswordBox"  PasswordChanged="PasswordBox_PasswordChanged" Canvas.Left="196" Canvas.Top="159" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderThickness="0,0,0,0" BorderBrush="{x:Null}"/>

        <TextBlock x:Name="PasswordPlaceholder" Text="Password" Foreground="Gray" IsHitTestVisible="False" Canvas.Left="196" Canvas.Top="159" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBlock Canvas.Left="180" TextWrapping="Wrap" Text="Log In" IsHitTestVisible="False" Canvas.Top="71" HorizontalAlignment="Left" VerticalAlignment="Center" Width="79" Height="28" Foreground="White" FontSize="20" FontFamily="Tempus Sans ITC"/>

        <Button x:Name="ExiteButton" Content="✕" Canvas.Left="454" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top" Background="{x:Null}" Width="46" Foreground="White" FontSize="22" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Click="Button_ExiteButton" Canvas.Top="-7"/>
    </Canvas>
</Window>
