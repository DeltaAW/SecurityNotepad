<Window x:Class="SecurityNotepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityNotepad"
        mc:Ignorable="d"
        x:Name="StartWindow" Title="MainWindow" Height="600" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowState="Maximized">
    <Grid>
        <!-- Основная структура -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="40"/>
            <!-- Вторая панель -->
            <RowDefinition Height="*"/>
            <!-- Основная часть -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <!-- Левая панель -->
            <ColumnDefinition Width="*"/>
            <!-- Основная область -->
        </Grid.ColumnDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#FF1C1C21" MouseDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть (иконка + кнопки меню) -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0">
                <Image Source="/icon.png" Width="24" Height="24" Margin="0,0,10,0"/>
                <Button Content="File" Width="50" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"/>
                <Button Content="Print" Width="50" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"/>
                <Button Content="Account" Width="70" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <!-- Отдельная панель для кнопок управления окном -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2"
              HorizontalAlignment="Right" VerticalAlignment="Top"
              Width="120" Height="30" Background="#FF1C1C21">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Click="Button_Minimize" Content="—" Width="40" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"/>
                <Button Click="Button_Size" Content="☐" Width="40" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"/>
                <Button Click="Button_Exite" Content="✕" Width="40" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <!-- Вторая панель -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="#FF1C1C21">
            <!-- место под будущие элементы -->
        </Grid>

        <!-- Левая панель -->
        <Grid Grid.Row="2" Grid.Column="0" Background="#FF1C1C21">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="51*"/>
            </Grid.RowDefinitions>
            <Button Content="Add file" Background="#FF151517" BorderBrush="{x:Null}" Foreground="Gray"/>
        </Grid>

        <!-- Основная рабочая область -->
        <Grid Grid.Row="2" Grid.Column="1" Background="#FF1C1C21">
            <TextBox TextWrapping="Wrap" Text="" d:LayoutOverrides="VerticalAlignment" Background="{x:Null}" BorderBrush="#FFABADB3" Foreground="Gray"/>
        </Grid>
    </Grid>
</Window>

